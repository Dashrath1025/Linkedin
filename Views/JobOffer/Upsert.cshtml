@model JobOfferVM


@{
    var title = "Post A Job";

}

<form method="post" enctype="multipart/form-data">
    @if (Model.JobOffer.Id != 0)
    {
        title = "Edit A Job";
        <input asp-for="JobOffer.Id" hidden />
    }
<div class="border p-3">

    <div class="form-group ">
        <h2 class="text-info pl-3">@title</h2>
    </div>

    <div class="form-group">

        <label asp-for="JobOffer.JobName"></label>
        <input asp-for="JobOffer.JobName" class="form-control" />
        <span asp-validation-for="JobOffer.JobName" class="text-danger"></span>
    </div>
    <div class="form-group">

        <label asp-for="JobOffer.CompanyName"></label>
        <input asp-for="JobOffer.CompanyName" class="form-control" />
        <span asp-validation-for="JobOffer.CompanyName" class="text-danger"></span>
    </div>
    <div class="form-group">

        <label asp-for="JobOffer.NoOfOpning"></label>
        <input asp-for="JobOffer.NoOfOpning" class="form-control" />
        <span asp-validation-for="JobOffer.NoOfOpning" class="text-danger"></span>
    </div>
    <div class="form-group">

        <label asp-for="JobOffer.Salary"></label>
        <input asp-for="JobOffer.Salary" class="form-control" />
        <span asp-validation-for="JobOffer.Salary" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="JobOffer.JobType"></label>
        <input asp-for="JobOffer.JobType" class="form-control" />
        <span asp-validation-for="JobOffer.JobType" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="JobOffer.Description"></label>
        <textarea asp-for="JobOffer.Description" class="form-control"></textarea>
        <span asp-validation-for="JobOffer.Description" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="JobOffer.Contact"></label>
        <input asp-for="JobOffer.Contact" class="form-control" />
        <span asp-validation-for="JobOffer.Contact" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="JobOffer.CreateDate"></label>
        <input asp-for="JobOffer.CreateDate" class="form-control" />
        <span asp-validation-for="JobOffer.CreateDate" class="text-danger"></span>
    </div>
    <div class="form-group">
        <input asp-for="JobOffer.isActive"  />
        <label asp-for="JobOffer.isActive"></label>
        <span asp-validation-for="JobOffer.isActive" class="text-danger"></span>
    </div>

    <div class="form-group ">
            <label >Choose Job Category</label>
            <select asp-for="JobOffer.JId" asp-items="@Model.JobCategoryList" class="form-control">
                <option disabled selected>--Select Category--</option>
            </select>
            <span asp-validation-for="JobOffer.JId" class="text-danger"></span>
        </div>

    <div class="form-group">


        @if (Model.JobOffer.Id != 0)
        {
            //update
            <input type="submit" class="btn btn-info" value="Update" />
        }
        else
        {
            //create
            <input type="submit" onclick="return validateInput()" class="btn btn-primary" value="Create" />
        }



        <a asp-action="Index" class="btn btn-dark"><i class="fas fa-sign-out-alt"></i> Back</a>


    </div>


</div>


</form>


